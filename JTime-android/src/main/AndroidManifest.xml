<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ismail_s.jtime.android"
    android:versionCode="2"
    android:versionName="1.0.0-SNAPSHOT">

    <application
        android:allowBackup="true"
        android:name=".JTimeApplication"
        android:theme="@android:style/Theme.Holo.Light">
        <activity
            android:name=".activity.AllMasjidsActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MasjidActivity"
            android:label="@string/title_activity_masjid"
            android:parentActivityName=".activity.AllMasjidsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ismail_s.jtime.android.activity.AllMasjidsActivity" />
        </activity>
    </application>

</manifest>
